<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FitFusion" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/white</item>

        <!-- The icon shown during the splash screen -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>

        <!-- Background color for the splash icon -->
        <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>

        <!-- Set the theme that will be applied after the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.FitFusion</item>
    </style>

</resources>